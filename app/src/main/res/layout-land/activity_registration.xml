<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_fresh_milk">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/todooo"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_bar"
        android:layout_below="@id/login_img"
        android:gravity="center"
        android:weightSum="3"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/username_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#75feada6"
            android:drawableLeft="@drawable/person_asset"
            android:drawablePadding="15dp"
            android:layout_marginStart="20dp"
            android:hint="Username"
            android:padding="20dp"
            android:textColorHint="#696969"
            android:textStyle="bold"></EditText>

        <EditText
            android:id="@+id/password_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#75feada6"
            android:drawableLeft="@drawable/password_asset"
            android:drawablePadding="15dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColorHint="#696969"
            android:textStyle="bold"></EditText>

        <EditText
            android:id="@+id/password_confirmation_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#75feada6"
            android:drawableLeft="@drawable/password_asset"
            android:drawablePadding="15dp"
            android:hint="Confirmation"
            android:layout_marginEnd="20dp"
            android:inputType="textPassword"
            android:padding="20dp"
            android:layout_weight="1"
            android:textColorHint="#696969"
            android:textStyle="bold"></EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_bar"
        android:drawableLeft="@drawable/info"
        android:drawablePadding="10dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:text="By registering you agree with privacy policy."
        android:textColor="#696969"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/policy"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#feada6"
        android:gravity="center"
        android:padding="12dp"
        android:text="register"
        android:textColor="@color/black"></Button>

    <TextView
        android:id="@+id/acc_inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="already have an account ?"
        android:textColor="#696969"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/login_inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acc_inquiry"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Login instead"
        android:textColor="#ffb199"
        android:textSize="18dp"
        android:textStyle="bold"></TextView>

</RelativeLayout>